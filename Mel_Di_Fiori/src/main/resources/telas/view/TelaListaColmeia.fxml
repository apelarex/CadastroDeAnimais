<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="crud_colmeia.ColmeiaListController"
            prefWidth="800"
            prefHeight="500"
            stylesheets="@/globalStyle/style.css">

    <VBox spacing="10">
        <padding>
            <Insets top="25" right="25" bottom="25" left="25"/>
        </padding>

        <children>
            <!-- Título da tela -->
            <Label text="Gerenciamento de Animais"
                   style="-fx-font-size: 25px; -fx-font-weight: bold; -fx-text-fill: white;"/>

            <!-- Tabela de animais - CORRIGIDO: fx:id deve ser tableAnimal -->
            <TableView fx:id="tableAnimal" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colIdentificacao" text="Identificação" prefWidth="120"/>
                    <TableColumn fx:id="colLocalizacao" text="Localização" prefWidth="120"/>
                    <TableColumn fx:id="colRaça" text="Raça" prefWidth="100"/>
                    <TableColumn fx:id="colStatus" text="Situação" prefWidth="100"/>
                    <TableColumn fx:id="colData" text="Data de Nascimento" prefWidth="150"/>
                    <!-- CORRIGIDO: fx:id deve ser Peso (igual ao controlador) -->
                    <TableColumn fx:id="Peso" text="Peso" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- Botões -->
            <HBox spacing="20">
                <Button text="Cadastrar" onAction="#abrirCadastro" styleClass="button02"/>
                <Button text="Editar" onAction="#editarAnimal" styleClass="button02"/>
                <Button text="Excluir" onAction="#excluirColmeia" styleClass="button02"/>
            </HBox>
        </children>
    </VBox>
</AnchorPane>