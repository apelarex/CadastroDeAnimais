<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="crud_colmeia.ColmeiaEditController"
            prefWidth="600" prefHeight="450">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <Label text="Editar Animal" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="300"/>
                    <ColumnConstraints halignment="LEFT" minWidth="400"/>
                </columnConstraints>

                <rowConstraints>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="30"/>
                    <RowConstraints minHeight="100"/>
                </rowConstraints>

                <!-- Número / Identificação -->
                <Label text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <TextField fx:id="txtNumero" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

                <!-- Data de Nascimento -->
                <Label text="Data de Nascimento:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <DatePicker fx:id="DataDeNascimento" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                <!-- Localização -->
                <Label text="Localização:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="txtLocalizacao" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

                <!-- Situação -->
                <Label text="Situação:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <ComboBox fx:id="comboSituacao" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

                <!-- Raça -->
                <Label text="Raça:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <ComboBox fx:id="comboRaça" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Peso -->
                <Label text="Peso:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                <Spinner fx:id="spinnerPeso" GridPane.columnIndex="1" GridPane.rowIndex="5"/>

                <!-- Observações -->
                <Label text="Observações:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextArea fx:id="txtObservacoes" prefRowCount="5" prefColumnCount="30" GridPane.columnIndex="1" GridPane.rowIndex="6"/>

            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Salvar" onAction="#salvarAlteracoes" />
                <Button text="Cancelar" onAction="#cancelar" />
            </HBox>

        </VBox>
    </children>

</AnchorPane>
